  },
  "homepage": "https://github.com/keshavdwivedi/Playwright_DEMO#readme",
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/node": "^24.10.4",
    "playwright": "^1.57.0",
    "typescript": "^5.9.3"
  }
}
